<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>must_and_should_10_numbers</fullName>
    <active>true</active>
    <description>10 numbers should need</description>
    <errorConditionFormula>and(not(ISBLANK( phone__c )), Not(REGEX( phone__c ,&quot;^[0-9]{10}$&quot;)))</errorConditionFormula>
    <errorDisplayField>phone__c</errorDisplayField>
    <errorMessage>enter 10 digit number</errorMessage>
</ValidationRule>
